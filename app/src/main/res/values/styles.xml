<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/status_color</item>
        <item name="colorAccent">@color/status_color</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="animation_up_down">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="animation_fade_in_out">
        <item name="android:duration">500</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="animation_fade_out_in">
        <item name="android:duration">500</item>
        <item name="android:windowEnterAnimation">@anim/fade_out</item>
        <item name="android:windowExitAnimation">@anim/fade_in</item>
    </style>

    <style name="btn_hover">
        <item name="android:duration">500</item>
        <item name="android:background">@drawable/selector_btn</item>
    </style>

</resources>
